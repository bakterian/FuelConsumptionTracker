<Window x:Class="FCT.Bootstrapper.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FCT.Bootstrapper"
             xmlns:ViewModels="clr-namespace:FCT.Control.ViewModels;assembly=FCT.Control"
             xmlns:Views="clr-namespace:FCT.Control.Views;assembly=FCT.Control"
             mc:Ignorable="d"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             d:DesignHeight="300" d:DesignWidth="300"
            Width="1300"
            Height="820"
            MinWidth="1300"
            MinHeight="820"
            Style="{DynamicResource WindowBaseStyle}">
    <Grid x:Name="RootTopGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" x:Name="FileMenu" />
        <ContentControl Grid.Row="1" x:Name="CarSelection"/>
        <ContentControl Grid.Row="2" x:Name="MainTab" Margin="5,5,0,0"/>
    </Grid>
</Window>
