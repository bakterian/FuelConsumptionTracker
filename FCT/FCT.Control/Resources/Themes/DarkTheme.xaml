<ResourceDictionary
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <LinearGradientBrush x:Key="WindowBackgroundBrush" EndPoint="0.5,1" 
        MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
        <GradientStop Color="#FF525255"/>
        <GradientStop Color="#FFA0A0AA" Offset="0.964"/>
    </LinearGradientBrush>

    <SolidColorBrush Color="Gray"  x:Key="WindowBorderBrush"/>

    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1"  x:Key="BackgroundBrush">
        <GradientStop Color="DarkGray" Offset="0" />
        <GradientStop Color="Gray" Offset="1.0" />
    </LinearGradientBrush>

    <SolidColorBrush Color="Gray"   x:Key="BackgroundBrushV2"/>
    
    <SolidColorBrush x:Key="2ndBackgroundBrush"
                     Color="#828A8A" />

    <SolidColorBrush x:Key="WindowForegroundBrush"
                     Color="WhiteSmoke" />
    <SolidColorBrush x:Key="LabelBrush"
                     Color="GhostWhite" />
    <SolidColorBrush x:Key="HighlightBrush"
                     Color="LightGray" />
    <SolidColorBrush x:Key="ForegroundBrush"
                     Color="White" />
</ResourceDictionary>